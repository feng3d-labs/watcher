{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "noImplicitAny": false,
        "sourceMap": true,
        "declarationMap": true,
        "declaration": true,
        "strict": true,
        "experimentalDecorators": true,
        "lib": [
            "ES2015",
            "DOM",
        ],
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
    ],
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "esModuleInterop": true
        }
    }
}